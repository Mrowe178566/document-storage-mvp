<main class="container mt-5">
  <section>

    <h1 class="mb-4" style="font-weight: 600; color: #1a73e8;">Your Folders</h1>

    <div class="mb-4">
      <a href="<%= new_folder_path %>" role="button" class="contrast outline">
        + New Folder
      </a>
    </div>

    <% if @folders.any? %>
      <div class="grid" style="--pico-grid-gap: 1.5rem;">
        <% @folders.each do |folder| %>
          <article style="padding: 1.5rem; border: 1px solid #e0e0e0; border-radius: 8px;">
            <h3 style="margin-bottom: 0.5rem;">
              <a href="<%= folder_path(folder) %>" style="text-decoration: none; color: #1a73e8;">
                ğŸ“ <%= folder.name %>
              </a>
            </h3>
            <p style="color: #5f6368; font-size: 0.9rem;">
              Created <%= time_ago_in_words(folder.created_at) %> ago
            </p>
          </article>
        <% end %>
      </div>
    <% else %>
      <p style="color: #5f6368;">You donâ€™t have any folders yet.</p>
    <% end %>

  </section>
</main>

