<section class="container" style="margin-top: 6rem; text-align: center; max-width: 720px;">

  <!-- Headline -->
  <h1 style="font-weight: 600; margin-bottom: 1rem; color: #1a73e8;">
    Stop Hunting for Files. Find Every Document in Seconds.
  </h1>

  <!-- Supporting Subheader -->
  <p style="color: #5f6368; font-size: 1.15rem; margin: 0 auto 2rem;">
    Access your documents from any device, anywhere — securely stored in File Vault.
  </p>

  <!-- Call to Action -->
  <% if user_signed_in? %>
    <%= link_to "Go to Your Vault", folders_path,
      class: "contrast outline",
      style: "padding: 0.9rem 1.6rem; font-size: 1.1rem; border-radius: 6px;" %>
  <% else %>
    <div style="display: flex; justify-content: center; gap: 1rem; margin-top: 2.5rem;">
      <%= link_to "Start Organizing Today — Create Your Free Account",
          new_user_registration_path,
          class: "contrast outline",
          style: "padding: 0.9rem 1.6rem; font-size: 1.1rem; border-radius: 6px; white-space: nowrap;" %>
    </div>

    <p style="margin-top: 1rem; color: #5f6368; font-size: 0.95rem;">
      Already have an account?
      <%= link_to "Sign In", new_user_session_path, style: "color: #1a73e8; font-weight: 500;" %>
    </p>
  <% end %>

</section>
