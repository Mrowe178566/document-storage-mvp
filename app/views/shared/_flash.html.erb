<% flash.each do |type, message| %>
  <div style="
    margin: 1rem auto;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    max-width: 900px;
    font-size: 0.95rem;
    background: <%= type == 'notice' ? '#e8f5e9' : '#ffebee' %>;
    color: <%= type == 'notice' ? '#2e7d32' : '#c62828' %>;
    border: 1px solid <%= type == 'notice' ? '#c8e6c9' : '#ffcdd2' %>;
  ">
    <%= message %>
  </div>
<% end %>
